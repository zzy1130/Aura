{
  "name": "aura",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first LaTeX IDE with AI Agent",
  "author": "Aura Team",
  "main": "main/dist/index.js",
  "scripts": {
    "dev": "concurrently -n next,electron \"npm run next:dev\" \"npm run electron:dev\"",
    "next:dev": "next dev -p 3001",
    "electron:dev": "wait-on http://localhost:3001 && tsc -p main/tsconfig.json && electron .",
    "build": "next build && tsc -p main/tsconfig.json",
    "build:backend": "cd ../backend && uv run pyinstaller aura-backend.spec --noconfirm",
    "build:all": "npm run build:backend && npm run build",
    "start": "electron .",
    "pack": "npm run build:all && electron-builder --dir",
    "dist": "npm run build:all && electron-builder",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "lint": "next lint",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.0",
    "html2pdf.js": "^0.14.0",
    "lucide-react": "^0.300.0",
    "monaco-editor": "^0.45.0",
    "next": "14.1.0",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-pdf": "^7.7.0",
    "remark-gfm": "^4.0.1",
    "streamdown": "^2.0.1",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aura.app",
    "productName": "Aura",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/dist/**/*",
      "out/**/*",
      "public/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,README,readme,test,tests,*.test.js,*.spec.js,example,examples,docs,doc}",
      "!**/node_modules/.bin",
      "!**/*.map"
    ],
    "asarUnpack": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/aura-backend",
        "to": "backend/aura-backend"
      },
      {
        "from": "../backend/bin",
        "to": "backend/bin",
        "filter": [
          "tectonic"
        ]
      },
      {
        "from": "../sandbox",
        "to": "sandbox",
        "filter": [
          "Dockerfile"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    }
  }
}
